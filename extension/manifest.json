{
  "manifest_version": 2,

  "name": "fb-pgp",
  "description": "",
  "version": "0.0.1",

  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },

  "browser_action": {
    "default_title": "Pretty Good Messenger"
  },

  "permissions": [
    "webNavigation",
    "https://messenger.com/",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*"],
      "run_at": "document_end",
      "js": ["dist/content.js"]
    }
  ]
}
